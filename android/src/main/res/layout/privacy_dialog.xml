<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="43dp"
    android:layout_marginRight="43dp"
    android:orientation="vertical"
    android:backgroundTint="@color/privacyDialogBackgroundColor">
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#FF111111"
        android:fontFamily="PingFangSC"
        android:gravity="center"
        android:lineSpacingExtra="26dp"
        android:layout_marginTop="15dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#FF333333"
            android:gravity="start"
            android:layout_margin="10dp" />
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reject_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="不同意并退出APP"
                android:backgroundTint="@color/privacyAccentColor"
                android:textColor="@color/privacyPrimaryColor"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/agree_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="同意"
                android:backgroundTint="@color/privacyPrimaryColor"
                android:textColor="@color/privacyAccentColor"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>